<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:colorBackground">@color/white</item>-->
        <item name="android:colorPressedHighlight">@color/color_primary</item>
        <item name= "android:textColorPrimary" >@color/black</item>
        <item name= "android:windowBackground" >@color/window_bar_background</item>
    </style>

    <style name="CustomNoActionbarStyle" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!--蓝字_白底-->
    <style name="text_blue_bg_gray">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--白字_蓝底-->
    <style name="text_white_bg_blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <!--蓝字_透明底-->
    <style name="text_blue_bg_empty_16">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--蓝字_透明底-->
    <style name="text_blue_bg_empty_20">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--黑字_透明底-->
    <style name="text_black_bg_empty_20">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
