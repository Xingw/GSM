<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorPressedHighlight">@color/color_primary</item>
        <item name= "android:textColorPrimary" >@color/text_color_primary</item>
        <item name= "android:windowBackground" >@color/window_bar_background</item>
    </style>

    <style name="ActivityTransparentOutAnimTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/activity_fade_out</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fade_in</item>
    </style>
</resources>
