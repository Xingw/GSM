<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- 地图 -->
    <com.amap.api.maps.MapView
        android:id="@+id/id_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--地图模式选择-->
    <include layout="@layout/view_map_mode" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="66dp"
        android:orientation="vertical">

        <!--选址按钮-->
        <Button
            android:id="@+id/id_btn_mark"
            android:layout_width="@dimen/btn_mark_size"
            android:layout_height="@dimen/btn_mark_size"
            android:layout_gravity="right"
            android:background="@color/white"
            android:text="选址"
            android:textSize="@dimen/text_size_button" />

        <!--数字地图开关-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="数字地图" />
            <Switch
                android:id="@+id/id_sw_digital_file"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <!--xml开关-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Xml文件" />
            <Switch
                android:id="@+id/id_sw_xml_file"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_button" />
        </LinearLayout>
    </LinearLayout>

    <!--下面的功能键-->
    <include
        layout="@layout/activity_prj_edit_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <!--公里标输入框-->
    <include layout="@layout/view_position" />

    <!--progressbar作为遮挡-->
    <include layout="@layout/view_progress_block"/>

</FrameLayout>