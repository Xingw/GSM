<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:minHeight="90dp"
              android:orientation="horizontal"
              android:paddingLeft="8dp"
              android:paddingRight="8dp">

    <CheckBox
        android:id="@+id/id_cb_prj_name"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="2"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/id_img_prj_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/icon_prj_background"
        android:scaleType="centerInside"
        android:src="@drawable/icon_prj_24dp"
    />
    <TextView
        android:id="@+id/id_tv_prj_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="left|center_vertical"
        android:paddingLeft="14dp"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"/>
    <TextView
        android:id="@+id/id_tv_creation_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="2016/01/01"/>
</LinearLayout>